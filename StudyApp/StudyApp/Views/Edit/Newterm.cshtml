@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid" id="main">
    <div class="row" id="pagetitle">
        <div class="col-sm">
            <h2 class="text-center">
                New Term
            </h2>
        </div>
    </div>
    <form class="row">
        <div class="row container-fluid" id="termcontainer">
            <div class="form-group col-md">
                <input type="Term" class="form-control" id="inputTerm" placeholder="New Term">
            </div>
            <div class="form-group col-md">
                <input type="Category" class="form-control" id="inputCategory" placeholder="Category">
            </div>
        </div>
        <div class="row container-fluid" id="definitioncontainer">
            <div class="form-group col-md">
                <input type="Definition" class="form-control" id="inputDefinition" placeholder="Definition">
            </div>
        </div>
        <div class="container-fluid" id="QAcontainer">
            <div class="form-group col-md">
                <input type="Question" class="form-control" id="inputQuestion" placeholder="Question">
                <input type="Answer" class="form-control" id="inputAnswer" placeholder="Answer">
            </div>
        </div>
        <div class="row container-fluid" id="buttoncontainer">
            <div class="col-sm" id="button">
                <a href="newquestion.html">
                    <button type="button" class="btn btn-primary btn-sm">
                        Add New Question
                    </button>
                </a>
            </div>
            <div class="col-sm" id="button">
                <a href="newterm.html">
                    <button type="button" class="btn btn-primary btn-sm">
                        Add New Term
                    </button>
                </a>
            </div>
            <div class="col-sm" id="button">
                <a href="study.html">
                    <button type="button" class="btn btn-primary btn-sm">
                        Study
                    </button>
                </a>
            </div>
        </div>
    </form>
</div>
