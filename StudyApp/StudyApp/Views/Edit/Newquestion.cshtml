<div class="container-fluid" id="main">
    <div class="row" id="pagetitle">
        <div class="col-sm">
            <h2 class="text-center">
                New Question
            </h2>
        </div>
    </div>
    <form class="row">
        <div class="row container-fluid" id="termcontainer">
            <div class="form-group col-sm">
                <label for="staticTerm" class="form-control">
                    Current Term
                </label>
            </div>
            <div class="form-group col-sm">
                <label for="staticCategory" class="form-control">
                    Category
                </label>
            </div>
        </div>
        <div class="form-group col-sm" id="definitioncontainer">
            <div class="form-group col-sm">
                <label for="staticDefinition" class="form-control form-label-center">
                    Defintion
                </label>
            </div>
        </div>
        <div class="container-fluid" id="QAcontainer">
            <div class="form-group col-md">
                <input type="Question" class="form-control" id="inputQuestion" placeholder="Question">
                <input type="Answer" class="form-control" id="inputAnswer" placeholder="Answer">
            </div>
        </div>
        <div class="row container-fluid" id="buttoncontainer">
            <div class="col-sm" id="button">
                <a href="newquestion.html">
                    <button type="button" class="btn btn-primary btn-sm" id="buttons" href="#refresh">
                        Add New Question
                    </button>
                </a>
            </div>
            <div class="col-sm" id="button">
                <a href="newterm.html">
                    <button type="button" class="btn btn-primary btn-sm" id="buttons" href="#newterm">
                        Add New Term
                    </button>
                </a>
            </div>
            <div class="col-sm" id="button">
                <a href="study.html">
                    <button type="button" class="btn btn-primary btn-sm" id="buttons" href="#studypage">
                        Study
                    </button>
                </a>
            </div>
        </div>
    </form>
</div>